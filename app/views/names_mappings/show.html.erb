<% content_for :javascripts do %>
  <%= javascript_include_tag 'code_highlighter.js', 'ruby.js', :cache => 'names_mapping' %>
<% end %>

<% @title = 'Names Mapping and Special Cases' %>

<h1>
  <%= @title %>
</h1>

<div class="clearfix"></div>

<h2 id="names-mapping">Names Mapping</h2>
<div id="table-wrap">
  <table>
    <col width="30%"/>
    <col width="70%"/>
    <tr class="header">
      <th>Name</th>
      <th>Also seen in logs as&hellip;</th>
    </tr>
    <% for name in @names_mapping.keys.sort %>
        <tr class="<%= cycle 'even', 'odd' %>">
          <td class="highlight"><%= h name %></td>
          <td class="log"><%= h Array(@names_mapping[name]).map {|n| %{"#{n}"}}.to_sentence.gsub("@", " ~ at ~ ") %>
        </tr>
    <% end %>
  </table>
</div>

<h2 id="special-cases">Special Cases</h2>
<div class="code">
  <code class="ruby">
<%= h @special_cases %>
  </code>
</div>
